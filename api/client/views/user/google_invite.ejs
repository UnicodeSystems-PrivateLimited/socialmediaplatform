<div class="modal-content">


    <div class="modal-header">
        <h4 class="modal-title">Google Invitation</h4>
    </div>
    <form class="form-signin" action="/api/user/sendgoogleinvite/<%=wallType%>/<%=wallId%>" method="post">
        <div class="modal-body">
            <!-- /.box-header -->
            <div class="box-body">                    
                    <ul class="products-list product-list-in-box">
                        <% users.forEach(function(user){ %>
                        <li class="item">
                            <div class="product-img">
                                <!--<img src="theme/dist/img/user1-128x128.jpg" alt="Product Image">-->
                                <%= user.name %>
                                <input type="hidden" class="form-control" name="email" value="<%= user.email %>" >    
                            </div>
                            <div class="product-info">
<span class="product-description">
                                  <%= user.email %>
                                </span>
                                <a href="javascript:void(0)" class="product-title">
                                    <!--jhon macclene-->
                                   <!-- <span class="label label-warning pull-right label-success">Invite</span>-->
                                    <input type="checkbox" class="g-invite" name="email_check" value="<%= user.email %>" >
                                </a>
                                
                            </div>
                        </li>
                        <% }) %>
                        <!-- /.item -->                        
                    </ul>                    
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" onclick="window.close();" class="btn btn-danger" data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-default send-invitation-btn">send invitation</button>
        </div>
    </form>
</div>

